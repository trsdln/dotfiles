# configuration below solves problem with spaces at file names for Zsh
set shell zsh
set shellopts '-eu:--shwordsplit'
set ifs "\n"
set filesep "\n"

cmd open ${{
  case $(file --mime-type $f -b) in
    image/*) sxiv -a $fx;;
    video/*) mpv $fx;;
    *) for f in $fx; do xdg-open $f > /dev/null 2> /dev/null & done;;
  esac
}}

map a push %mkdir<space>
