# Search at hidden files
--hidden

# Group matches by file/path
--sort=path

--smart-case

# Ignore .gitignore
--no-ignore-vcs

# Exclude some common stuff
--glob=!.cache/**
--glob=!.local/**
--glob=!.cargo/**
--glob=!**/.git/**
--glob=!**/node_modules/**
--glob=!**/.meteor/local/**
--glob=!**/build/**
--glob=!.db/**
--glob=!.dump/*/**
--glob=!.tags
--glob=!.tags.*
--glob=!schema.json
--glob=!todos.wofl
--glob=!Session.vim
# for Rust related projects
--glob=!target/debug/**
